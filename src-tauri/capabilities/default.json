{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for the Timelapse Creator app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APP/**",
        "$APPDATA/**",
        "$HOME/**",
        "$DOWNLOAD/**",
        "$DOCUMENT/**",
        "$PICTURE/**"
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        }
      ]
    }
  ]
}
