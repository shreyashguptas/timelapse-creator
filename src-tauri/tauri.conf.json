{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timelapse Creator",
  "identifier": "com.timelapse.creator",
  "version": "1.0.0",
  "build": {
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "windows": [
      {
        "title": "Timelapse Creator",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
